<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>ToDoList!</title>
    <link href='{{ base_url() }}/css/style.css' rel='stylesheet' type='text/css'>
    <link href='{{ base_url() }}/css/jquery-ui.min.css' rel='stylesheet' type='text/css'>
    <link rel="icon" type="image/x-icon" href="{{ base_url() }}/img/favicon.ico"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
<div class="header">
    <h1>ToDoList</h1>
    <!--ul class="filters">
        <li class="filter">todo</li>
        <li class="filter">important</li>
        <li class="createFilter"></li>
    </ul-->
    <ul class="listActions">
        <li class="action deleteTickets" data-url="{{ path_for('ticket-remove') }}" data-method="DELETE">Remove</li>
        <li class="action getTickets" data-url="{{ path_for('tickets-list') }}" data-method="GET">Reload</li>
        <li class="action addTicket">Add</li>
    </ul>
</div>
<div class="marginTop"></div>
<div class="hidden form">
    <form id="newTicket" novalidate="novalidate">
        <p><input id="summary" name="summary" type="text"/></p>
        <p><textarea id="description" rows="10"></textarea></p>
        <p>Due date :<input id="dueDate" type="text"/><input id="submit" type="button" value="Valider"
                                                             data-url="{{ path_for('ticket-save') }}"
                                                             data-method="PUT"/></p>
    </form>
</div>
<div class="listTickets" data-url="{{ path_for('tickets-list') }}" data-method="GET"></div>
<script src='{{ base_url() }}/js/jquery.js'></script>
<script src='{{ base_url() }}/js/jquery-ui.min.js'></script>
<script src='{{ base_url() }}/js/application.js'></script>
</body>
</html>
