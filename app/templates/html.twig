<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link href='{{ base_url() }}/css/style.css' rel='stylesheet' type='text/css'>
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ base_url() }}/img/favicon.ico"/>
</head>
<body>
<h1>ToDoList</h1>
<ul class="filters">
    <li class="filter">todo</li>
    <li class="filter">important</li>
    <li class="createFilter"></li>
</ul>
<ul class="actions">
    <li class="action" data-url="{{ path_for('tickets-list') }}">Add</li>
</ul>
<button class="listTickets" data-url="{{ path_for('tickets-list') }}">listTickets</button>
<button class="listTickets" data-url="{{ path_for('ticket-load') }}">ticket-load</button>
<ul class="listTickets"></ul>
{% block javascripts %}
    <script src='{{ base_url() }}/js/jquery.js'></script>
    <script src='{{ base_url() }}/js/application.js'></script>{% endblock %}
</body>
</html>
